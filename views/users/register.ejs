<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/forms.css">
<div class="col-md-4 container">
  <h1>Register</h1>
  <form class="validated-form" action="/register" method="post" novalidate>
    <div class="mb-3">
      <label class="form-label" for="username">Username</label>
      <input class="form-control" type="text" name="username" value="" id="username" required>
    </div>

    <div class="mb-3">
      <label class="form-label" for="email">Email</label>
      <input class="form-control" type="email" name="email" value="" id="email" required>
    </div>

    <div class="mb-3">
      <label class="form-label" for="password">Password</label>
      <input class="form-control" type="password" name="password" value="" id="password" required>
    </div>

    <button type="submit" class="btn btn-success">Register</button>
  </form>
</div>
